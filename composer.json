{
  "name": "whitekross/wp-composed",
  "type": "project",
  "license": "MIT",
  "description": "A WordPress stack sample using Composer and WP-Cli",
  "homepage": "http://alessandrofiore.com/",
  "authors": [
    {
      "name": "Alessandro Fiore",
      "email": "fiore.alessandro@yahoo.it"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "4.3",
    "wp-cli/wp-cli": "dev-master",
    "wp-api/wp-api": "2.0-beta4",
    "wpackagist-theme/hueman":"*",
    "wpackagist-plugin/akismet":"dev-trunk"
  },
  "extra": {
    "wordpress-install-dir": "wp"
  },
  "require-dev": {
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"copy('wp-cli-sample.yml', 'wp-cli.yml');\""
    ]
  }
}
